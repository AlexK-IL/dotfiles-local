[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.background}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.focused}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = ${colors.unfocused}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.urgent}
label-urgent-padding = 2

[module/title]
type = internal/xwindow
format-margin = 2

[module/volume]
type = internal/pulseaudio
format-volume-foreground = ${colors.fg2}
format-muted-foreground = ${colors.fg2}
format-volume = <ramp-volume> <label-volume>
label-volume = ÔÄ® %percentage%%
label-muted = ÔÄ¶
ramp-volume-0 = üîà
ramp-volume-1 = üîâ
ramp-volume-2 = üîä

[module/xkeyboard]
type = internal/xkeyboard
format-foreground = ${colors.fg1}
blacklist-0 = num lock
blacklist-1 = caps lock
label-layout = ÔÑú %layout%
format-margin = 2

[module/temperature]
type = internal/temperature
format-foreground = ${colors.fg1}
thermal-zone = 0
warn-temperature = 80
format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-margin = 2
label = %temperature-c%
label-warn = %temperature-c% TOO HOT
ramp-0 = Ôãä
ramp-1 = Ôãá

[module/date]
type = internal/date
format-foreground = ${colors.fg1}
interval = 1
date = "%d/%m/%Y"
format-margin = 2
format-prefix = ÔÅ≥
label = " %date%"

[module/time]
type = internal/date
format-foreground = ${colors.fg2}
interval = 1
time = "%H:%M:%S"
format-prefix = ÔÄó
label = " %time%"

[module/battery]
type = internal/battery
format-charging-foreground = ${colors.fg2}
format-discharging-foreground = ${colors.fg2}
format-full-foreground = ${colors.fg2}
full-at = 99
battery = BAT0
adapter = AC
poll-interval = 5
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
bar-capacity-width = 10
animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-framerate = 750
animation-discharging-0 = ÔâÄ
animation-discharging-1 = ÔâÅ
animation-discharging-2 = ÔâÇ
animation-discharging-3 = ÔâÉ
animation-discharging-4 = ÔâÑ
animation-discharging-framerate = 500

[module/network-wifi]
